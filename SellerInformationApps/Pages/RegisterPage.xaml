<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SellerInformationApps.Pages.RegisterPage"
             xmlns:local="clr-namespace:SellerInformationApps.ViewModel"
             Title="Kayıt Sayfası"
             BackgroundColor="#f5f5f5">
    <ContentPage.BindingContext>
        <local:DatePickerViewModel/>
    </ContentPage.BindingContext>
    <ScrollView Grid.Row="0" Orientation="Vertical">
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Text="Hesap Oluştur"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               FontAttributes="Bold"
               FontSize="20"
               Grid.Row="0"
               Margin="0,20,0,0"/>
            <Frame Grid.Row="1" Padding="20" CornerRadius="10" BackgroundColor="White" HasShadow="True" Margin="0,20,0,0">
                <StackLayout Padding="0" Spacing="15" Orientation="Vertical">
                    <Label Text="Ad" TextColor="Black" FontSize="Medium"/>
                    <Entry x:Name="FirstNameEntry" Placeholder="Adınızı girin" BackgroundColor="#f0f0f0"/>

                    <Label Text="Soyad" TextColor="Black" FontSize="Medium"/>
                    <Entry x:Name="LastNameEntry" Placeholder="Soyadınızı girin" BackgroundColor="#f0f0f0"/>

                    <Label Text="Kullanıcı Adı" TextColor="Black" FontSize="Medium"/>
                    <Entry x:Name="UserNameEntry" Placeholder="Kullanıcı adınızı girin" BackgroundColor="#f0f0f0"/>

                    <Label Text="E-posta" TextColor="Black" FontSize="Medium"/>
                    <Entry x:Name="EmailEntry" Placeholder="E-postanızı girin" Keyboard="Email" BackgroundColor="#f0f0f0"/>

                    <Label Text="Doğum Tarihi" TextColor="Black" FontSize="Medium"/>
                    <DatePicker x:Name="AgeEntry" MinimumDate="1900-01-01" MaximumDate="{Binding CurrentDate}" TextColor="Black" BackgroundColor="#f0f0f0"/>

                    <Label Text="Şifre" TextColor="Black" FontSize="Medium"/>
                    <Entry x:Name="PasswordEntry" Placeholder="Şifrenizi girin" IsPassword="True" BackgroundColor="#f0f0f0" />

                    <Label Text="Şifreyi Doğrula" TextColor="Black" FontSize="Medium"/>
                    <Entry x:Name="VerifyPasswordEntry" Placeholder="Şifrenizi girin" IsPassword="True" BackgroundColor="#f0f0f0"/>

                    <Button Text="Kayıt Ol"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        VerticalOptions="EndAndExpand"
                        Margin="0,20,0,0"
                        CornerRadius="10"
                        Clicked="OnRegisterButtonClicked"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
