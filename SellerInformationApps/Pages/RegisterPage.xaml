<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SellerInformationApps.Pages.RegisterPage"
             xmlns:local="clr-namespace:SellerInformationApps.ViewModel"
             Title="Kayıt Ol"
             BackgroundColor="White"
             Shell.BackgroundColor="#007AFF">

    <!-- Başlık -->
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="CenterAndExpand">
            <Label Text="Kayıt Ol"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"/>
        </StackLayout>
    </Shell.TitleView>

    <!-- İçerik -->
        <Grid Padding="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Frame Grid.Row="1"
                   Padding="20"
                   CornerRadius="15"
                   BackgroundColor="#f9f9f9"
                   HasShadow="True"
                   Margin="0,0,0,0">

                <StackLayout Spacing="20" Orientation="Vertical">

                    <!-- Hesap Oluştur Başlığı -->
                    <Label Text="Hesap Oluştur"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="26"/>

                    <!-- Girdi Alanları -->
                    <StackLayout Spacing="15">

                        <!-- Ad -->
                        <Entry Placeholder="Ad"
                               Text="{Binding FirstName}"
                               BackgroundColor="#f0f0f0"
                               PlaceholderColor="Gray"
                               TextColor="Black"
                               Margin="0,5"/>

                        <!-- Soyad -->
                        <Entry Placeholder="Soyad"
                               Text="{Binding LastName}"
                               BackgroundColor="#f0f0f0"
                               PlaceholderColor="Gray"
                               TextColor="Black"
                               Margin="0,5"/>

                        <!-- Kullanıcı Adı -->
                        <Entry Placeholder="Kullanıcı Adı"
                               Text="{Binding UserName}"
                               BackgroundColor="#f0f0f0"
                               PlaceholderColor="Gray"
                               TextColor="Black"
                               Margin="0,5"/>

                        <!-- E-posta -->
                        <Entry Placeholder="E-posta"
                               Keyboard="Email"
                               Text="{Binding Email}"
                               BackgroundColor="#f0f0f0"
                               PlaceholderColor="Gray"
                               TextColor="Black"
                               Margin="0,5"/>

                        <!-- Doğum Tarihi -->
                        <DatePicker Date="{Binding Age, Mode=TwoWay}"
                                    MinimumDate="1900-01-01"
                                    MaximumDate="{Binding CurrentDate}"
                                    BackgroundColor="#f0f0f0"
                                    TextColor="Black"
                                    Margin="0,5"/>

                        <!-- Şifre -->
                        <Entry Placeholder="Şifre"
                               IsPassword="True"
                               Text="{Binding Password}"
                               BackgroundColor="#f0f0f0"
                               PlaceholderColor="Gray"
                               TextColor="Black"
                               Margin="0,5"/>

                        <!-- Şifreyi Doğrula -->
                        <Entry Placeholder="Şifreyi Doğrula"
                               IsPassword="True"
                               Text="{Binding VerifyPassword}"
                               BackgroundColor="#f0f0f0"
                               PlaceholderColor="Gray"
                               TextColor="Black"
                               Margin="0,5"/>
                    </StackLayout>

                    <!-- Kayıt Ol Butonu -->
                    <Button Text="Kayıt Ol"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            CornerRadius="10"
                            FontSize="Medium"
                            Padding="10"
                            Command="{Binding RegisterCommand}"
                            Margin="0,4"/>

                    <!-- Hesabınız Var mı? Giriş Yap -->
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 Spacing="5">

                        <Label Text="Hesabınız Var mı?"
                               TextColor="Gray"
                               FontSize="Small"/>

                        <Label Text="Giriş Yap"
                               TextColor="#007AFF"
                               FontSize="Small"
                               FontAttributes="Bold">

                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LoginCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </Grid>
</ContentPage>
