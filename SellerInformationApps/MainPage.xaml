<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SellerInformationApps.MainPage"
             Title="Ana Sayfa"
             BackgroundColor="#EFEFEF"
             Shell.BackgroundColor="#FFFFFF">
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Label Text="Ana Sayfa"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="Black"
                   VerticalOptions="Center"/>
        </StackLayout>
    </Shell.TitleView>
    
    <ContentPage.Content>
        <Grid Padding="20">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Padding="10" Orientation="Horizontal" 
                         HorizontalOptions="Center" Margin="0,0,0,70">
                <Label Text="Hoşgeldin:"
                       FontSize="22"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="Black"/>
                <Label Text="[UserName]" 
                    FontSize="22"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="Black"/>
            </StackLayout>

                <StackLayout Spacing="20"  Grid.Row="1" Padding="10">

                    <StackLayout Spacing="10">
                        <Label Text="Giriş Yap || Kayıt Ol"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#333"/>

                        <Button Text="Giriş Yap"
                                Clicked="OpenLoginPage"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                HeightRequest="50"/>

                        <Button Text="Kayıt Ol"
                                Clicked="OpenRegisterPage"
                                BackgroundColor="#34C759"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                HeightRequest="50" />
                    </StackLayout>

                    <StackLayout Spacing="10">
                        <Label Text="Uygulama İçeriği"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#333"/>

                        <Button Text="Satıcı Bilgileri"
                                Clicked="OpenSellerInfoPage"
                                BackgroundColor="#FF3B30"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                HeightRequest="50"/>

                        <Button Text="Kullanıcılar"
                                Clicked="OpenUserListPage"
                                BackgroundColor="#5856D6"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                HeightRequest="50"/>
                        
                        <Button Text="Grafik"
                                Clicked="OpenChartPage"
                                BackgroundColor="#FF9500"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                HeightRequest="50"/>
                        
                        <Button Text="Kullanıcı Profili"
                                Clicked="OpenProfilePage"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                HeightRequest="50"/>
                    </StackLayout>
                </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
