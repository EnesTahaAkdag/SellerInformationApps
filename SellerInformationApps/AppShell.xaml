<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SellerInformationApps.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SellerInformationApps"
    xmlns:pages="clr-namespace:SellerInformationApps.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="SellerInformationApps">

    <ShellContent
        Title="Ana Sayfa"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Satıcı Bilgileri"
        ContentTemplate="{DataTemplate pages:SellerInfosPage}"
        Route="SellerInfosPage"/>
    <ShellContent
        Title="Grafik Sayfası"
        ContentTemplate="{DataTemplate pages:ChartPage}"
        Route="ChartPage"/>

</Shell>
